    <div class="container-fluid pl-5">
        <div class="card">
            <h1 class="card-header">Editer site</h1>
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ site.id }}</td>
                    </tr>
                    <tr>
                        <th>Libelle</th>
                        <td>{{ site.libelle }}</td>
                    </tr>
                    <tr>
                        <th>Code</th>
                        <td>{{ site.code }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-secondary" href="{{ path('site_index') }}">Retour Ã  la liste</a>
                <a class="btn btn-success" href="{{ path('site_new') }}">Nouveau</a>
