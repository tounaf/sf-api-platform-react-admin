{% extends 'base.html.twig' %}

{% block title %}Liste utilisateurs{% endblock %}

{% block body %}

	<div class="container-fluid pl-5">
		<div class="card">
			<h1 class="card-header">Liste utilisateur</h1>
			<div class="card-body">
				<table class="table table-striped table-bordered tb-liste">
					<thead>
					<tr>
						<th>Nom</th>
						<th>Prenom</th>
						<th>Email</th>
						<th>DateEntree</th>
						<th>Activé(e)</th>
						<th>actions</th>
					</tr>
					</thead>
					<tbody>
				
					{% for user in users %}
						<tr>
							<td>{{ user.nom }}</td>
							<td>{{ user.prenom }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.dateEntree ? user.dateEntree|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ user.enable ? 'Yes' : 'No' }}</td>
							<td>
								<a class="btn btn-info" href="{{ path('user_show', {'id': user.id}) }}">voir</a>
								<a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">editer</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">Aucune données trouvées</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>
			<div class="card-footer">
				<a class="btn btn-success" href="{{ path('user_new') }}">Nouveau</a>
			</div>
		</div>
	</div>

	
{% endblock %}
