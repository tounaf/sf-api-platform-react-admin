{% extends 'base.html.twig' %}

{% block title %}Achat index{% endblock %}

{% block body %}
    <div class="container-fluid pl-5">
        <div class="card">
            <h1 class="card-header">Liste</h1>
            <div class="card-body">
                <table class="table table-striped table-bordered tb-liste">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>CreateAt</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
					{% for achat in achats %}
                        <tr>
                            <td>{{ achat.id }}</td>
                            <td>{{ achat.createAt ? achat.createAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('achat_show', {'id': achat.id}) }}">show</a>
                                <a href="{{ path('achat_edit', {'id': achat.id}) }}">edit</a>
                            </td>
                        </tr>
					{% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
					{% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-success" href="{{ path('achat_new') }}">Nouveau</a>
            </div>
        </div>
    </div>
{% endblock %}
