{% extends 'base.html.twig' %}

{% block title %}Entite index{% endblock %}

{% block body %}

    <div class="container-fluid pl-5">
        <div class="card">
            <h1 class="card-header">Liste entit√©</h1>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Libelle</th>
                        <th>Code</th>
                        <th>CreateAt</th>
                        <th>UpdatedAt</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
					{% for entite in entites %}
                        <tr>
                            <td>{{ entite.id }}</td>
                            <td>{{ entite.libelle }}</td>
                            <td>{{ entite.code }}</td>
                            <td>{{ entite.createAt ? entite.createAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ entite.updatedAt ? entite.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('entite_show', {'id': entite.id}) }}">show</a>
                                <a href="{{ path('entite_edit', {'id': entite.id}) }}">edit</a>
                            </td>
                        </tr>
					{% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
					{% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-success" href="{{ path('entite_new') }}">Nouveau</a>
            </div>
        </div>
    </div>

{% endblock %}
